<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="hwinventory.domain">

    <class name="ItemOfInventory" table="hw_items"> 

        <id name="idItem" column="item_id">
            <generator class="native"/>
        </id>
        
        <property name="scgNumber" column="item_scg_num"/>
        <property name="nameItem" column="item_name"/>
        <property name="inventoryDate" column="inventory_date"/>
    	<property name="price" column="item_price"/>
    	<property name="budget" column="item_budget"/>
    	<property name="guarantee" column="item_guarantee"/>
    	<property name="guaranteeEnd" column="item_guarantee_end"/>

        <one-to-one name="user" class="User"/>
    	<one-to-one name="hardwareDevice" class="HardwareDevice"/>
    	<one-to-one name="location" class="LocationItemInventory"/>
    	
    	<many-to-one name="inventoryItem" class="InventoryItem" column="inventory_id" not-null="true"/>
    	

	</class>

</hibernate-mapping>
