<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="hwinventory.domain">

    <class name="TypeHardwareDevice" table="hw_types"> 

        <id name="idType" column="type_id">
            <generator class="native"/>
        </id>

        <property name="nameType" column="type_name"/>

    	<many-to-one name="category" class="CategoryHardwareDevice" column="category_id" not-null="true"/>
    	
    	<set name="devices" lazy="false" inverse="true" cascade="all">
            <key column="device_id"/>
            <one-to-many class="HardwareDevice"/>
        </set>

	</class>

</hibernate-mapping>
