<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="hwinventory.domain">

    <class name="HardwareDevice" table="hw_device"> 

        <id name="idHardwareDevice" column="device_id">
            <generator class="native"/>
        </id>
        
        <property name="scgNumber" column="item_scg_num"/>
        <property name="nameItem" column="item_name"/>
	    <property name="diskSize" column="item_disk"/>
    	<property name="memorySize" column="item_memory"/>
    	<property name="ianItem" column="item_ian"/>
    	<property name="macItem" column="item_mac"/>
    	<property name="snItem" column="item_sn"/>
    	<property name="ipItem" column="item_ip"/>

		<one-to-one name="type" class="TypeHardwareDevice"/>
	</class>

</hibernate-mapping>