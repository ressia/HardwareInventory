<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="hwinventory.domain">

    <class name="InventoryItem" table="inventory_items"> 

        <id name="idInventory" column="inventory_id">
            <generator class="native"/>
        </id>
        
        <property name="note" column="note"/>
        
         <set name="items" lazy="false" inverse="true" cascade="all">
            <key column="item_id"/>
            <one-to-many class="ItemOfInventory"/>
        </set>
  
	</class>

</hibernate-mapping>
