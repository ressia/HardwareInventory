<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="hwinventory.domain">

    <class name="CategoryHardwareDevice" table="hw_categories"> 

        <id name="idCategory" column="category_id">
            <generator class="native"/>
        </id>

        <property name="nameCategory" column="category_name"/>
        
        <set name="types" lazy="false" inverse="true" cascade="all">
            <key column="type_id"/>
            <one-to-many class="TypeHardwareDevice"/>
        </set>
	</class>

</hibernate-mapping>
